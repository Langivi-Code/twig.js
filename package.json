{
  "author": "John Roepke <john@justjohn.us> (http://john.sh/)",
  "name": "twig",
  "description": "JS port of the Twig templating language.",
  "version": "1.15.4",
  "type": "module",
  "homepage": "https://github.com/twigjs/twig.js",
  "license": "BSD-2-Clause",
  "licenses": [
    {
      "type": "BSD-2-Clause",
      "url": "https://raw.github.com/twigjs/twig.js/master/LICENSE"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/twigjs/twig.js.git"
  },
  "main": "index.node.js",
  "engines": {
    "node": ">=8.16"
  },
  "bin": {
    "twigjs": "./bin/twigjs"
  },
  "scripts": {
    "preversion": "npm test && git diff --exit-code --quiet",
    "postversion": "git push origin master && git push origin master --tags",
    "pretest": "npm run build",
    "test": "mocha -r should",
    "build": "webpack",
    "posttest": "xo src lib bin"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "country-locale-map": "^1.8.11",
    "currencies-map": "^3.3.5",
    "date-fns": "^2.29.3",
    "emptydir": "^0.0.0",
    "ensureDir": "^1.0.6",
    "html-to-markdown": "^1.0.0",
    "iconv-lite": "^0.6.3",
    "language-name-to-language-name": "^0.5.1",
    "locutus": "^2.0.16",
    "md5": "^2.3.0",
    "minimatch": "3.0.x",
    "moment": "^2.29.4",
    "showdown": "^2.1.0",
    "slugify": "^1.6.5",
    "spacetime-informal": "^0.6.1",
    "turndown": "^7.1.1",
    "walk": "2.3.x"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "babel-loader": "^8.0.6",
    "eslint-plugin-mocha": "^6.3.0",
    "mocha": "^10.2.0",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^9.0.0",
    "terser-webpack-plugin": "^2.3.5",
    "tokenizer": "1.1.x",
    "webpack": "^5.27.2",
    "webpack-cli": "^4.5.0",
    "xo": "^0.53.1"
  },
  "browser": {
    "fs": false
  },
  "xo": {
    "space": 4,
    "envs": [
      "browser",
      "node",
      "mocha"
    ],
    "plugins": [
      "mocha"
    ],
    "rules": {
      "promise/prefer-await-to-then": 0,
      "prefer-arrow-callback": 0,
      "mocha/prefer-arrow-callback": 2
    }
  }
}

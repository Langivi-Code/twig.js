<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Functions</title>
  </head>
  <body>
    <div>
      <p>Function attribute</p>
      <div>{{ attribute({ type:"input"}, "type") }}
        Attribute 
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function block</p>
      <div>
        {% block headers %}<h3>Hello, this is a block header </h3> {% endblock %}
        <div>Request header block <p>{{block('headers') }}</p></div>
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function constant</p>
      <div>
            {{ constant('RSS', "data") }}
            {{ constant('RSS') }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>

    <div>
      <p>Function cycle</p>
      <div>

       {% set fruits = ['apple', 'orange', 'citrus'] %}

        {% for i in 0..10 %}
                {{ cycle(fruits, i) }}
        {% endfor %}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function date</p>
      <div>
        {{ date("20.12.2022") }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function dump</p>
      <div>
        {% set data = "some data" %}
        {{ dump(data) }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function  html_classes</p>
      <div class="{{ html_classes('a-class', 'another-class')}}" >
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function  include</p>
      <div>
        {{ include('view/header.twig') }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function  max</p>
      <div>
        {{ max(1, 3, 2) }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function  min</p>
      <div>
       {{ min(1, 3, 2) }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function  parent</p>
      <div>
        {# {% extends "new.twig" %}

        {% block sidebar %}
            <h3>Table Of Contents</h3>
            ...
                {{ parent() }}
        {% endblock %} #}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function random</p>
      <div>
        {{ random(['apple', 'orange', 'citrus']) }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function range</p>
      <div>
        {% for i in range(0, 3) %}
            {{ i }},
        {% endfor %}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>Function source</p>
      <div>
        {{ source('view/header.twig') }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
    <div>
      <p>country_timezones</p>
      <div>
        {{ country_timezones('FR') }}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
     <div>
      <p>template_from_string</p>
      <div>
         {% set name = "Vasya" %}
        {{ include(template_from_string("Hello {{ name }}") )}}
      </div>
      <hr style="border-top: 2px dotted black" />
    </div>
  </body>
</html>